@model gebzedemo.Models.AdminCred;

@{
    Layout = "_AdminLoginLayout";
    ViewData["Title"] = "Admin Panel";
}
 

    <form id= "admin-login" asp-controller="Admin" asp-action="Login" formaction="POST" class="form-signin">
      <img class="mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
      <h1 class="h3 mb-3 font-weight-normal">Admin Girişi</h1>
      <label for="username" class="sr-only">Kullanıcı Adı</label>
      <input asp-for="Username" id="Username" class="form-control" placeholder="Kullanıcı Adı" required autofocus>
      <label for="inputPassword" class="sr-only">Şifre</label>
      <input type="password" asp-for="Password"  id="Password" class="form-control" placeholder="Şifre" required>
      <button id="submitButton" name="submit" class="btn btn-lg btn-primary btn-block" type="submit">Giriş Yap</button>
      <p class="mt-5 mb-3 text-muted">&copy; 2022</p>
      </form>
	
@{
    if (@TempData["msg"] != null)
    {
    <script>
            alert('@TempData["msg"]')
    </script>
    }
}	